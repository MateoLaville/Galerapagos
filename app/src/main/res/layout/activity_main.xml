        app:layout_constraintVertical_bias="0.846" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radeaux"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/incrWater"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="@+id/decrWater"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/decrWood"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/moins"
        android:onClick="decrWood"
        app:layout_constraintBottom_toBottomOf="@+id/wood"
        app:layout_constraintEnd_toStartOf="@+id/wood"
        app:layout_constraintTop_toTopOf="@+id/wood"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/incrWoodToSearch"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/plus"
        android:onClick="incrWoodToSearch"
        app:layout_constraintBottom_toBottomOf="@+id/woodToSearch"
        app:layout_constraintStart_toEndOf="@+id/woodToSearch"
        app:layout_constraintTop_toTopOf="@+id/woodToSearch" />

    <TextView
        android:id="@+id/woodToSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Bois"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/fish" />

    <ImageButton
        android:id="@+id/incrWood"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/plus"
        android:onClick="incrWood"
        app:layout_constraintBottom_toBottomOf="@+id/wood"
        app:layout_constraintStart_toEndOf="@+id/wood"
        app:layout_constraintTop_toTopOf="@+id/wood"
        app:layout_constraintVertical_bias="0.368" />

    <ImageButton
        android:id="@+id/decrRaft"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/moins"
        android:onClick="decrRaft"
        app:layout_constraintBottom_toBottomOf="@+id/raft"
        app:layout_constraintEnd_toStartOf="@+id/raft"
        app:layout_constraintTop_toTopOf="@+id/raft"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/decrWoodToSearch"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/moins"
        android:onClick="decrWoodToSearch"
        app:layout_constraintBottom_toBottomOf="@+id/woodToSearch"
        app:layout_constraintEnd_toStartOf="@+id/woodToSearch"
        app:layout_constraintTop_toTopOf="@+id/woodToSearch"
        app:layout_constraintVertical_bias="0.0" />



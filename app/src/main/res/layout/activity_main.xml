        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/decrWood"
        app:layout_constraintTop_toBottomOf="@+id/wood" />

    <Button
        android:id="@+id/searchWood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="searchWood"
        android:text="Chercher"
        app:layout_constraintEnd_toEndOf="@+id/woodToSearch"
        app:layout_constraintStart_toStartOf="@+id/woodToSearch"

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Nourriture"
        app:layout_constraintEnd_toEndOf="@+id/incrDay"
        app:layout_constraintStart_toStartOf="@+id/decrDay"
        app:layout_constraintTop_toBottomOf="@+id/day" />

    <ImageButton
     android:id="@+id/decrFood"
     android:layout_width="35dp"
     android:layout_height="18dp"
     android:layout_marginEnd="12dp"
     android:background="@drawable/moins"
     android:onClick="decrFood"
     app:layout_constraintBottom_toBottomOf="@+id/food"
     app:layout_constraintEnd_toStartOf="@+id/food"
